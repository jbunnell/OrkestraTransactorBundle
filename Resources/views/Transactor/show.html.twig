{% extends '::base.html.twig' %}

{% block subtitle %}Transactor Details{% endblock %}

{% block panel %}
  {{ panel(
    { 'label' : 'Transactors', 'icon' : 'icon2570' },
    { 'label' : transactor.name },
    { 'label' : 'New Transactor', 'icon' : 'icon2546', 'link' : path('admin_transactor_new') }
  ) }}
{% endblock %}

{% block content %}
<h1>Transactor</h1>

<table class="record-properties">
    <tbody>
        <tr>
            <th>ID:</th>
            <td>{{ transactor.id }}</td>
        </tr>
        <tr>
            <th>Name:</th>
            <td>{{ transactor.name }}</td>
        </tr>
        <tr>
            <th>Description:</th>
            <td>{{ transactor.description }}</td>
        </tr>
        <tr>
            <th>Credentials:</th>
            <td>
              {% for key, val in transactor.credentials %}
                {{ key }}: {{ val }}<br />
              {% endfor %}
            </td>
        </tr>
        <tr>
            <th>Active:</th>
            <td>{{ transactor.active ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Last Modified:</th>
            <td>{{ transactor.dateModified is empty ? 'Never' : transactor.dateModified }}</td>
        </tr>
        <tr>
            <th>Date Created:</th>
            <td>{{ transactor.dateCreated }}</td>
        </tr>
    </tbody>
</table>
<p class="form-buttons">
  <a href="{{ path('admin_transactor_edit', { 'id': transactor.id }) }}">
    <button>Edit</button>
  </a>
</p>
{% endblock %}